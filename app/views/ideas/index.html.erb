  <div class='col-10'>
    <div class='list-group'>
      <% @ideas.each do |idea| %>
        <%= link_to idea do %>
            <h4><%= idea.title %></h4>
        <% end %>
            <p><%= idea.description %> </p>
            <h4>Created by: <%= idea.user&.full_name || 'DELETED'%></h4>
          <hr>
      <% end %>
    </div>
  </div>
</div> 