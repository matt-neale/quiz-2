<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
  <nav>
    <ul>
      <span>
        <%= link_to "Idea Factory", root_path, class: 'nav-item' %>
        |
        <%= link_to "New Idea", new_idea_path, class: 'nav-item' %>
        |
      <% if user_signed_in?%>
        <div class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Hello, <%= current_user.full_name %>!</div> 
        <%= link_to 'Logout', session_path, method: :delete, data:{confirm: 'Are you sure you want to log out?'},class:"nav-link" %>
      
      <% else %>
        <%= link_to 'Login', new_session_path,class:"nav-item"  %>
        |
        <%= link_to 'Sign Up', new_user_path,class:"nav-item"  %>  
      <% end %>
      </span>
    </ul>
  </nav>
  <hr>
  <%if flash[:notice].present? %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= flash[:notice]  %> 
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
</div>
<% elsif flash[:alert].present? %> 
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%=  flash[:alert] %> 
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
</div>
<% end %>
<hr>
    <%= yield %>
  </body>
</html>